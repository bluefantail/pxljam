<h2>
  Team: <%= @team.name %>
</h2>

<p><%= link_to "< Back", admin_teams_url %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Shirt Size</th>
  </tr>
  
  <% @team.players.each do |player| %>
    <tr>
      <td><%= player.name %></td>
      <td><%= player.email %></td>
      <td><%= player.shirt_size %></td>
    </tr>
  <% end %>
</table>