<h2>All Entrants</h2>
<p><%= link_to "< Back", admin_teams_url %></p>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Team</th>
    <th>Shirt size</th>
  </tr>

  <% @players.sort { |a, b| a.team.name <=> b.team.name }.each do |player| %>
    <tr>
      <td><%= player.name %></td>
      <td><%= player.email %></td>
      <td><%= player.team.try! :name %></td>
      <td><%= player.shirt_size %></td>
    </tr>
  <% end %>
</table>